<div class="container">
  <!-- link back -->
  <p class="mt-5">
    <%= link_to root_path, class: "btn btn-primary" do %>
      <i class="fas fa-chevron-left"></i> Retour
    <% end %>
  </p>

  <div class="row">

    <div class="col">
    </div>

    <div class="col-12 col-md-6 my-5">
      <div class="border rounded px-4 pt-4">
        <h1 class="text-center mb-5">Changer mon mot de passe</h1>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>

          <div class="form-inputs">
            <%= f.input :password,
                        label: 'Nouveau mot de passe',
                        required: true,
                        autofocus: true,
                        hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        label: "Confirmer votre nouveau mot de passe",
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, 'Sauvegarder', class: "btn btn-primary font-weight-bold button-text w-100 my-3" %>
          </div>
          <p class="mt-3 devise-links">Première visite ? <%= link_to 'Créer un compte',  new_registration_path(resource_name) %></p>
          <p class="devise-links">Déja un compte ? <%= link_to 'Se connecter', new_session_path(resource_name) %> </p>
        <% end %>

      </div>
    </div>

    <div class="col">
    </div>

  </div>
</div>
