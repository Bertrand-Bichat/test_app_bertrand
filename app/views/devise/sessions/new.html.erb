<div class="container">
  <!-- link back -->
  <p class="mt-5">
    <%= link_to root_path, class: "btn btn-primary" do %>
      <i class="fas fa-chevron-left"></i> Retour
    <% end %>
  </p>

  <div class="row">

    <div class="col">
    </div>

    <div class="col-12 col-md-6 my-5">
      <div class="border rounded px-4 pt-4">
        <h1 class="text-center mb-5">Se connecter</h1>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        label: 'Email',
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: true,
                        label: 'Mot de passe',
                        input_html: { autocomplete: "current-password" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, 'Connexion', class: "btn btn-primary font-weight-bold button-text w-100 my-3" %>
          </div>
        <% end %>

        <p class="mt-3 devise-links">Mot de passe oublié ? <%= link_to 'Réinitialiser', new_password_path(resource_name), class: "text-decoration-none font-weight-bold" %></p>
        <p class="devise-links">Première visite ? <%= link_to 'Créer un compte',  new_registration_path(resource_name), class: "text-decoration-none font-weight-bold" %></p>

      </div>
    </div>

    <div class="col">
    </div>

  </div>
</div>
